{
  "name": "amethyst.host",
  "version": "1.4.0",
  "description": "Hosting service providing Minecraft servers at a small price.",
  "main": "./dist/main.js",
  "scripts": {
    "lint": "npx eslint ./src --ext .ts",
    "build": "rm -rf dist&&mkdir dist&&cp -r src/* dist&&echo '[amethyst-build] building (linux)'&&npx tsc -p .",
    "winbuild": "rmdir /s /q dist&&mkdir dist&&xcopy /s src\\* dist&&echo '[amethyst-build] building (windows)&&tsc -p .'",
    "start": "pm2 start dist/main.js",
    "nstart": "node dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Em1tt/amethyst.host.git"
  },
  "author": "Amethyst",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Em1tt/amethyst.host/issues"
  },
  "homepage": "https://github.com/Em1tt/amethyst.host#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "eta": "^1.12.1",
    "express": "^4.17.1",
    "express-minify": "^1.0.0",
    "mailparser": "^3.2.0",
    "morgan": "^1.10.0",
    "smtp-server": "^3.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.25.0",
    "typescript": "^4.2.4"
  }
}
