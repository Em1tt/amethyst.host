{
  "compilerOptions": {
    "target"                : "esnext",
    "module"                : "nodenext",
    "composite"             : true,
    "incremental"           : true,
    "removeComments"        : true,
    "esModuleInterop"       : true,
    "noEmitOnError"         : true,
    "experimentalDecorators": true,
    "preserveConstEnums"    : true,
    "outDir"                : "./dist/",
    "rootDir"               : "./src/"
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}

