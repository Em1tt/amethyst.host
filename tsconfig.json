{
  "compilerOptions": {
    "target"                : "es2021",
    "module"                : "commonjs",
    "removeComments"        : true,
    "esModuleInterop"       : true,
    "noEmitOnError"         : true,
    "experimentalDecorators": true,
    "preserveConstEnums"    : true,
    "listEmittedFiles"      : false,
    "alwaysStrict"          : true,
    "outDir"                : "./dist",
    "baseUrl"               : "."
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}

