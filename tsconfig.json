{
  "compilerOptions": {
    "target"                : "ES2019",
    "module"                : "commonjs",
    "removeComments"        : true,
    "esModuleInterop"       : true,
    "noEmitOnError"         : true,
    "experimentalDecorators": true,
    "preserveConstEnums"    : true,
    "outDir"                : "dist"
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}
