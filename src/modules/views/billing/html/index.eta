<!DOCTYPE html>
<html lang="en">

<head>
    <title>Ametrine.host | Billing</title>
    <link rel="icon" type="image/png" href="../images/favicon.png">
    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="description"
        content="Powerful server hosting starting at â‚¬0.75/GB. We're a transparent hosting provider with a 100% uptime and reliable support.">
    <!-- APPLE -->
    <!-- Apple Touch Icon (at least 200x200px) -->
    <link rel="apple-touch-icon" href="../images/apple-touch-icon.png">
    <!-- To run web application in full-screen -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <!-- Status Bar Style-->
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- END OF APPLE -->
    <!-- Microsoft Tiles -->
    <meta name="msapplication-config" content="browserconfig.xml">
    <!--STYLESHEETS-->
    <!--Asynchronous load-->
    <link rel="preload" as="style" onload="this.onload=null;this.rel='stylesheet'"
        href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
        integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous"
        media="">
    <noscript>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css">
    </noscript>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
        rel="stylesheet">
    <link href="/billing/public/stylesheets/shared.css" rel="stylesheet">
    <link href="/billing/public/stylesheets/themes.css" rel="stylesheet">
    <link href="/billing/public/stylesheets/navbar.css" rel="stylesheet">
    <link href="/billing/public/stylesheets/index.css" rel="stylesheet">
    <script src="/billing/public/javascripts/theme.js" async defer></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class=<%=(it.userData.email) ? "loggedIn" : ""%>>
    <%~ E.includeFile('../public/templates/navbar.eta', {icon: it.userData.email ? "user-cog" : "users", text: it.userData.email ? "My Account" : "Sign-In", permission_id: it.userData.permission_id, config: it.config}) %>
    <main>
        <div class="content">
            <h1 class="header1"><%= (it.userData.name) ? `Welcome back, ${it.userData.name.split(" ")[0]}` : "Welcome, user!"%></h1>
            <hr class="semanticLine">
            <% if(!it.userData.name) {%> <!--Displayed only when user is not signed in -->
            <h2 class="header2">Please sign-in to view your profile details.</h2>
            <div class="decorationWrapper">
                <div class="decoration _0"></div>
                <div class="decoration _1"></div>
                <div class="decoration _2"></div>
                <div class="decoration _3"></div>
                <div class="decoration _4"></div>
                <div class="decoration _5"></div>
                <div class="decoration _6"></div>
                <div class="decoration _7"></div>
            </div>
            <%}else{%> <!--Displayed when a user is signed in -->
                <div class="cardWrapper">
                    <div id="accountCard">
                        <h3><i class="fa fa-user-circle"></i> Account</h3>
                        <form>
                            <fieldset>
                                <label class="header2" for="account-fullName">Full Name</label><br>
                                <input class="text1" type="text" required readonly id="account-fullName" value="<%=it.userData.name%>"/><br>
                                <label class="header2" for="account-email">E-Mail</label><br>
                                <input class="text1" type="email" required readonly id="account-email" value="<%=it.userData.email%>"/><br>
                                <label class="invisible header2" id="account-confirm-password-label" for="account-confirm-password">Current Password</label><br>
                                <input class="invisible text1" type="password" required id="account-confirm-password"/><br>
                                <p style="color: white;" id="update-error"></p>
                                <div>
                                    <button type="reset" class="button1" onclick="toggleEditMode()">Edit Account</button>
                                    <button type="button" id="multiButton" onclick="logOut()" class="button1">Sign Out</button>
                                </div>
                                <div>
                                    <p class="text2">User ID: <%=it.userData.user_id%></p>
                                    <p class="text2">Permission ID: <%=it.userData.permission_id%></p>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div id="security">
                        <h3><i class="fa fa-shield-alt"></i> Security</h3>
                        <div id="buttonWrapper">
                            <button class="button1" id="change-pass-button" onclick="editPassword()">Change Password</button>
                            <% if(it.userData['2fa']){ %>
                            <button class="button1" id="2fa-button">Disable 2FA</button>
                            <% }else{ %>
                            <button class="button1" onclick="twofa()" id="2fa-button">Enable 2FA</button>
                            <% } %>
                            <button class="button1" id="discord-button">Link With Discord (Coming Soon)</button>
                            <button class="button1" id="delete-button" onclick="deleteAccount()">Delete Account</button>
                        </div>
                    </div>
                    <div id="services">
                        <h3><i class="fa fa-box"></i> Services</h3>
                    </div>
                    <div id="transactions">
                        <h3><i class="fa fa-file-invoice"></i> Transactions</h3>
                    </div>
                </div>
            <%}%>
        </div>
        <aside class="hide banner">
            <a href="#"><div aria-hidden="true"></div></a>
        </aside>
    </main>
    <%~ E.includeFile('../public/templates/authentication.eta')%>
    <%~ E.includeFile('../public/templates/support.eta')%>
    <%~ E.includeFile('../public/templates/announcements.eta') %>
    <%~ E.includeFile('../public/javascripts/announcements.eta', {userData: it.userData}) %>
    <%~ E.includeFile('../public/javascripts/retheme.eta', {userData: it.userData}) %>
    <script src="/billing/public/javascripts/authentication.js" async defer></script>
    <script src="/billing/public/javascripts/popups.js" async defer></script>
</body>