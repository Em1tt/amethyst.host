<!DOCTYPE html>
<html lang="en">

<head>
    <title>Ametrine.host | Billing</title>
    <link rel="icon" type="image/png" href="../images/favicon.png">
    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="description"
        content="Powerful server hosting starting at â‚¬0.75/GB. We're a transparent hosting provider with a 100% uptime and reliable support.">
    <!-- APPLE -->
    <!-- Apple Touch Icon (at least 200x200px) -->
    <link rel="apple-touch-icon" href="../images/apple-touch-icon.png">
    <!-- To run web application in full-screen -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <!-- Status Bar Style-->
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- END OF APPLE -->
    <!-- Microsoft Tiles -->
    <meta name="msapplication-config" content="browserconfig.xml">
    <!--STYLESHEETS-->
    <!--Asynchronous load-->
    <link rel="preload" as="style" onload="this.onload=null;this.rel='stylesheet'"
        href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
        integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous"
        media="">
    <noscript>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css">
    </noscript>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
        rel="stylesheet">
    <link href="/billing/public/stylesheets/shared.css" rel="stylesheet">
    <link href="/billing/public/stylesheets/themes.css" rel="stylesheet">
    <link href="/billing/public/stylesheets/navbar.css" rel="stylesheet">
    <link href="/billing/public/stylesheets/index.css" rel="stylesheet">
    <script src="https://www.recaptcha.net/recaptcha/api.js" async defer></script>
</head>

<body>
    <%~ E.includeFile('../public/templates/navbar.eta', {icon: it.userData.email ? "user-cog" : "users", text: it.userData.email ? "My Account" : "Sign-In", permission_id: it.userData.permission_id, config: it.config}) %>
    <main>
        <div>
            <h1><%= (it.userData.name) ? `Welcome back, ${it.userData.name.split(" ")[0]}` : "Welcome, user!"%></h1>
            <hr>
            <% if(!it.userData.email) {%>
            <h2>"Please sign-in to view your profile details."</h2>
            <%}%>
            <% if(it.userData.email){ %>
                <div class="cardWrapper">
                    <div id="account">
                        <h3><i class="fa fa-user-circle"></i> Account</h3>
                        <form>
                            <fieldset>
                                <label for="">Full Name</label><br>
                                <input type="text" required readonly id="account-fullName" value="<%=it.userData.name%>"><br>
                                <label for="">E-Mail</label><br>
                                <input type="email" required readonly id="account-email" value="<%=it.userData.email%>"><br>
                                <p>User ID: <%=it.userData.user_id%></p>
                                <p>Permission ID: <%=it.userData.permission_id%></p>
                            </fieldset>
                            <div>
                                <div class="popup" id="button1">
                                    <button onclick="toggleEditMode()" aria-label="Edit Account"><i class="fa fa-wrench"></i></button>
                                    <p class="popupText" id="button1-tooltip">Edit Account Information</p>
                                </div>
                                <div class="popup" id="button2">
                                    <button id="logOutButton" aria-label="Log Out"><i class="fa fa-sign-out-alt"></i></button>
                                    <p class="popupText" id="button2-tooltip">Sign-Out</p>
                                </div>
                                <div style="visibility: hidden;position: absolute;" class="popup" id="button3">
                                    <label onclick="toggleEditMode()" for="button3-in" class="labelButton"><i class="fa fa-times"></i></label>
                                    <input type="reset" id="button3-in" name="button3-in" aria-label="Discard Changes">
                                    <p class="popupText" id="button1-tooltip">Discard changes</p>
                                </div>
                                <div style="visibility: hidden;position: absolute;" class="popup" id="button4">
                                    <label for="button4-in" class="labelButton"><i class="fa fa-check"></i></label>
                                    <input type="submit" name="button4-in" id="button4-in" aria-label="Accept Changes">
                                    <p class="popupText" id="button1-tooltip">Accept changes</p>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="security">
                        <h3><i class="fa fa-shield-alt"></i> Security</h3>
                    </div>
                    <div id="services">
                        <h3><i class="fa fa-box"></i> Services</h3>
                    </div>
                    <div id="transactions">
                        <h3><i class="fa fa-file-invoice"></i> Transactions</h3>
                    </div>
                </div>
            <% }else{%>
                <div class="decowrapper">
                <div class="deco"></div>
                <div class="deco"></div>
                <div class="deco"></div>
                <div class="deco"></div>
                <div class="deco"></div>
                <div class="deco"></div>
                <div class="deco"></div>
                <div class="deco"></div>
            </div>
            <% }%>
        </div>
        <aside class="hideMedium">
            <a href="#"><img src="/billing/public/images/Banner.png"></a>
        </aside>
    </main>
    <%~ E.includeFile('../public/templates/authentication.eta')%>
    <%~ E.includeFile('../public/templates/announcements.eta') %>
    <%~ E.includeFile('../public/javascripts/announcements.eta', {userData: it.userData}) %>
    <script src="/billing/public/javascripts/authentication.js" async defer></script>
    <script src="/billing/public/javascripts/popups.js" async defer></script>
</body>